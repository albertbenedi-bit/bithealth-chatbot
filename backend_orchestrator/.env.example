# Backend AI Orchestrator Environment Configuration

# LLM Provider API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://chatbot_user:chatbot_pass@postgres.data.svc.cluster.local:5432/chatbot_db

# Redis Configuration
REDIS_URL=redis://redis.data.svc.cluster.local:6379/0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka.data.svc.cluster.local:9092

# LLM Provider Settings
DEFAULT_LLM_PROVIDER=gemini
FALLBACK_LLM_PROVIDER=anthropic

# Service Configuration
SERVICE_NAME=backend-orchestrator
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Development Settings
DEBUG=false
RELOAD=false
